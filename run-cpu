#!/bin/bash
nodes=1
cpus=128
ntasks=1
threads_per_task=$(( cpus / ntasks )) 
jobn=cpu-cc-testing
rm -rf outputs/$jobn
mkdir outputs/$jobn

cp langmuir_turb-cpu.jl outputs/$jobn/
cp stokes.jl outputs/$jobn/

cd outputs/$jobn/
touch Project.toml

cat > EXEC_STEP << EXEC
#!/bin/sh

#PBS -A UCUB0166 
#PBS -N $jobn
#PBS -q develop
#PBS -j oe
###PBS -l job_priority=economy
#PBS -l walltime=4:00:00
#PBS -l select=$nodes:ncpus=$cpus:mpiprocs=$ntasks

export JULIA_NUM_PRECOMPILE_TASKS=$cpus
export JULIA_NUM_THREADS=$cpus
export OMP_PROC_BIND=FALSE
export OMP_NUM_THREADS=$ntasks

# Load critical modules
module --force purge
module load ncarenv/23.09 nvhpc/24.7 cray-mpich/8.1.29

module list

# GPU-specific variables are not needed for CPU runs
unset MPICH_GPU_SUPPORT_ENABLED
unset MPICH_GPU_MANAGED_MEMORY_SUPPORT_ENABLED
unset JULIA_MPI_HAS_CUDA
unset JULIA_CUDA_MEMORY_POOL

export PALS_TRANSFER=false

echo "Instantiating project..."
julia --project -e 'using Pkg; Pkg.instantiate()'
echo "Resolving project..."
julia --project -e 'using Pkg; Pkg.resolve()'
echo "Developing Oceananigans..."
julia --project -e 'using Pkg; Pkg.develop(path="/glade/work/apauls/personal-oceananigans/Oceananigans.jl-main")' 
echo "Adding necessary packages..."
julia --project -e 'using Pkg; Pkg.add("MPI"); Pkg.add("MPIPreferences"); Pkg.add("Printf"); Pkg.add("Statistics"); Pkg.add("Random"); Pkg.add("DifferentialEquations")'
julia --project -e 'using MPIPreferences; MPIPreferences.use_system_binary(vendor="cray", force=true);'

mpiexec -n $ntasks julia --threads $cpus --project langmuir_turb-cpu.jl
EXEC

qsub < EXEC_STEP
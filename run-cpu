#!/bin/bash
nodes=1
cpus=128
ntasks=1
threads_per_task=$(( cpus / ntasks )) 
jobn=cpu-cc-testing
rm -rf outputs/$jobn
mkdir outputs/$jobn

cp langmuir_turb-cpu.jl outputs/$jobn/
cp stokes.jl outputs/$jobn/

cd outputs/$jobn/
touch Project.toml

cat > EXEC_STEP << EXEC
#!/bin/sh

#PBS -A UCUB0166 
#PBS -N $jobn
#PBS -q develop
#PBS -j oe
###PBS -l job_priority=economy
#PBS -l walltime=4:00:00
#PBS -l select=$nodes:ncpus=$cpus:mpiprocs=$ntasks

export JULIA_NUM_PRECOMPILE_TASKS=$cpus
export JULIA_NUM_THREADS=$cpus

# Load critical modules
module --force purge
module load ncarenv/23.09 nvhpc/24.7 cray-mpich/8.1.29

module list

export PALS_TRANSFER=false
export JULIA_CUDA_MEMORY_POOL=none

julia --project -e 'import Pkg'
julia --project -e 'using Pkg; Pkg.instantiate()'
julia --project -e 'using Pkg; Pkg.resolve()'
# 2. Update packages to the environment that we need to use. not always necessary
julia --project -e 'Pkg.develop(path="/glade/work/apauls/.julia/dev/Oceananigans.jl-main")' 
julia --project -e 'using Pkg; Pkg.add("MPI"); Pkg.add("MPIPreferences"); Pkg.add("Printf"); Pkg.add("Statistics"); Pkg.add("Random"); Pkg.add("DifferentialEquations")'
julia --project -e 'using MPIPreferences; MPIPreferences.use_system_binary(vendor="cray")'
julia --project -e 'using MPI'
# Only need to run if you want to reset or update things (did you update the amount of  nodes and processors?)
# Finally, let's run this thing

mpiexec -n $ntasks julia --project langmuir_turb-cpu.jl
EXEC

qsub < EXEC_STEP